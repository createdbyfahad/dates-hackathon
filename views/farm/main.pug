extends ../layout

block content
  h1 Farm
  p.lead Here are your palms
  a.btn.btn-primary(href='/dashboard/farm/add') Add A Palm ðŸŒ´
  hr
  .row
    table.table.table-hover
      thead
        tr
          th(scope='col') ID
          th(scope='col') Type
          th(scope='col') Age (months)
          th(scope='col') Location
          th(scope='col') Harvest (year)
          th(scope='col') Last Harvest
          th(scope='col')
      tbody
        for palm in palms
          tr
            th(scope='row')=palm.id
            td=palm.type
            td=palm.age
            td #{palm.location.row}x#{palm.location.column}
            td #{palm.yearHarvestTotal}kg
            td=palm.lastHarvest
            td
              a(href='/dashboard/farm/' + palm.id) more
